@model IEnumerable<CareDev.Models.DoctorInstruction>

<h2>Doctor Instructions</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Instruction</th>
            <th>Medication</th>
            <th>Follow-Up</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patient?.Name</td>
                <td>@item.Instructions</td>
                <td>@item.Medication</td>
                <td>@item.FollowUpDate?.ToShortDateString()</td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="text-success">Completed</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!item.IsCompleted)
                    {
                        <form asp-action="MarkDone" asp-route-id="@item.InstructionId" method="post">
                            <button type="submit" class="btn btn-success btn-sm">Mark Done</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
