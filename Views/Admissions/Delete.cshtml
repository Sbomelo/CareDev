@model CareDev.Models.Admission

@{
    ViewData["Title"] = "Delete";
}
<body class="text-dark" style="background-color:#E0F7FA">
    <h1>Delete Admission</h1>

    <h3>Are you sure you want to delete this Admission?</h3>
    <div class="text-dark">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ward)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ward.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Bed)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Bed.BedNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdmissionDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdmissionDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DischargeDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DischargeDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdmissionReason)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdmissionReason)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="AdmissionId" />
            <hr />
            <input type="submit" value="Delete" class="btn btn-danger rounded-pill w-25 me-1" />
            <a asp-action="Index" class="btn btn-dark rounded-pill w-25 me-1">Back to List</a>
        </form>
    </div>
</body>

