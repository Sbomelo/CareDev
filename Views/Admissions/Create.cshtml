@model CareDev.Models.ViewModels.AdmitPatientViewModel

@{
    ViewData["Title"] = "Create";
}
<body style="background-color:#E0F7FA">
    @if (ViewBag.DetailedError != null)
  {
    <div class="alert alert-danger">
        <strong>Technical detail:</strong> @ViewBag.DetailedError
    </div>
  }

    <div class="d-flex justify-content-center text-center">
        <h1>Admit Passient</h1>
    </div>
    
    <div class="d-flex justify-content-center align-content-center gap-2">
        <div class="col-md-4 ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3 mt-3">
                    <label asp-for="PatientId" class="control-label"></label>
                    <select asp-for="PatientId" class="form-control" asp-items="Model.Patients">
                        <option value="">Select Patient</option>
                    </select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 mt-3">
                    <label asp-for="AdmissionDate" class="control-label"></label>
                    <input asp-for="AdmissionDate" class="form-control" />
                    <span asp-validation-for="AdmissionDate" class="text-danger"></span>
                </div>

                <div class="form-group d-flex align-content-center gap-5">
                    <div class="form-group w-75 mb-3">
                        <label asp-for="WardId" class="control-label"></label>
                        <select asp-for="WardId" class="form-control" asp-items="Model.Wards">
                            <option value=""> Select Ward</option>
                        </select>
                        <span asp-validation-for="WardId" class="text-danger"></span>
                    </div>
                    <div class="form-group w-25 mb-3">
                        <label asp-for="BedId" class="control-label"></label>
                        <select asp-for="BedId" class="form-control" asp-items="Model.Beds">
                            <option value="">Select Bed</option>
                        </select>
                        <span asp-validation-for="BedId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group d-flex align-content-center gap-5 mb-3">
                    <div class="form-group w-75 ">
                        <label asp-for="DoctorId" class="control-label"></label>
                        <select asp-for="DoctorId" class="form-control" asp-items="Model.Doctors">
                            <option value=""> Select Doctor</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    <div class="form-group w-75">
                        <label asp-for="EmployeeId" class="control-label"></label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="Model.Employees">
                            <option value=""> Select Employee</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
               <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Admission Reason" asp-for="AdmissionReason"></textarea>
                    <label asp-for="AdmissionReason">Admission Reason</label>
                    <span asp-validation-for="AdmissionReason" class="text-danger"></span>
                </div>

                <hr />
                <div class="form-group d-flex justify-content-center gap-3">
                    <input type="submit" value="Admit" class="btn btn-primary w-50 rounded-pill" /><a asp-action="Index" class="w-50 btn btn-dark rounded-pill">Back to List</a>
                </div>
                <hr />
            </form>
        </div>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
