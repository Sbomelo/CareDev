@model CareDev.Models.Bed

@{
    ViewData["Title"] = "Edit";
}
<body style="background-color:#B0BEC5">
    <h1>Edit Beds</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post"
                  data-confirm-on-submit="true"
                  data-confirm-title="Save Changes"
                  data-confirm-message="Are you sure you want to save updates for @Model.BedNumber?"
                  data-confirm-text="Save"
                  data-confirm-class="btn-primary">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BedId" />
                <div class="form-group">
                    <label asp-for="BedNumber" class="control-label"></label>
                    <input asp-for="BedNumber" class="form-control" />
                    <span asp-validation-for="BedNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WardId" class="control-label"></label>
                    <select asp-for="WardId" class="form-control" asp-items="ViewBag.WardId"></select>
                    <span asp-validation-for="WardId" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                    </label>
                </div>

                <hr />
                <div class="form-group text-center mt-2 d-flex align-content-center">
                    <input type="submit" value="Save" class="btn btn-primary rounded-pill w-75 me-1" /><a asp-action="Index" class="btn btn-dark rounded-pill w-75 ms-1">Back to List</a>
                </div>
                <hr />

            </form>
        </div>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
