@model CareDev.Models.Bed

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bed</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BedId" />
            <div class="form-group">
                <label asp-for="BedNumber" class="control-label"></label>
                <input asp-for="BedNumber" class="form-control" />
                <span asp-validation-for="BedNumber" class="text-danger"></span>
            </div> 
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsOccupied" /> @Html.DisplayNameFor(model => model.IsOccupied)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="WardId" class="control-label"></label>
                <select asp-for="WardId" class="form-control" asp-items="ViewBag.WardId"></select>
                <span asp-validation-for="WardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
