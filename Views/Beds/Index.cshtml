@model IEnumerable<CareDev.Models.Bed>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BedNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOccupied)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ward)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BedNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOccupied)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ward.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BedId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BedId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BedId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
