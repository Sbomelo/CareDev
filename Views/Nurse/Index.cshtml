@{
    ViewData["Title"] = "Welcome to Patient Care System";
}
<style>
    .carousel-wrapper {
        max-height: 550px;
        overflow: hidden;
    }

    .carousel-inner {
        height: 450px;
    }

        .carousel-inner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>

<!-- Full-width Carousel -->
<div id="carouselExample" class="carousel slide mb-4" data-bs-ride="carousel">
    <div class="carousel-inner carousel-wrapper">
        <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1549560826-4b7bfe23f37b?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDQzfHx8ZW58MHx8fHx8" class="d-block w-100 rounded" alt="Vitals Slide 1">
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1675524375058-0b0f72f5d3b8?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8ZGlzcGVuc2UlMjBtZWRpY2F0aW9ufGVufDB8fDB8fHww" class="d-block w-100 rounded" alt="Vitals Slide 2">
        </div>
        <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1504813184591-01572f98c85f?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fG1lZGljYWx8ZW58MHx8MHx8fDA%3D" class="d-block w-100 rounded" alt="Vitals Slide 3">
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Cards Container -->
<div class="container mt-3">
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Manage Patients</h5>
                    <p class="card-text">Add, edit, or delete patient records in the system.</p>
                    <a asp-controller="PatientManagement" asp-action="Index" class="btn btn-warning text-white">Go to Patients</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Dispense Medication</h5>
                    <p class="card-text">Manage and dispense prescribed medications to patients.</p>
                    <a asp-controller="MedicationDispensation" asp-action="SelectPatient" class="btn btn-primary">Go to Medication</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Record Patient Vitals</h5>
                    <p class="card-text">Capture patient vitals like temperature, pulse, and BP.</p>
                    <a asp-controller="PatientVitals" asp-action="Patients" class="btn btn-success">Record Vitals</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Doctor Instructions</h5>
                    <p class="card-text">View instructions and notes from assigned doctors.</p>
                    <a asp-controller="NurseInstructions" asp-action="Index" class="btn btn-info text-white">View Instructions</a>
                </div>
            </div>
        </div>
    </div>
</div>

