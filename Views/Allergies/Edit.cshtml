@model CareDev.Models.Allergy

@{
    ViewData["Title"] = "Edit";
}
<body style="background-color: #B0BEC5; color:white;">
<h1>Edit Allergy</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AllergyId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <hr />
                <div class="form-group text-center mt-2 d-flex align-content-center">

                    <input type="submit" value="Update" class="btn btn-primary rounded-pill w-75 me-1" /> <a asp-action="Index" class="btn btn-dark rounded-pill w-75 ms-1">Back to List</a>

                </div>
                <hr />
        </form>
    </div>
</div>

</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
