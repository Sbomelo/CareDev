@model CareDev.Models.ViewModels.AdministerMedicationVM

<h2>Administer Medication - @Model.MedicationName</h2>

<form asp-action="Administer" method="post">
    <input type="hidden" asp-for="DispenseId" />

    <div class="form-group">
        <label asp-for="TimeGiven"></label>
        <input asp-for="TimeGiven" class="form-control" />
        <span asp-validation-for="TimeGiven" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observations"></label>
        <textarea asp-for="Observations" class="form-control"></textarea>
        <span asp-validation-for="Observations" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdverseReactions"></label>
        <textarea asp-for="AdverseReactions" class="form-control"></textarea>
        <span asp-validation-for="AdverseReactions" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
</form>

