@model IEnumerable<CareDev.Models.PatientVitals>

@{
    ViewData["Title"] = "Patient Vitals";
    var patientName = ViewData["PatientName"] as string ?? "Patient";
}

<h2>Vitals History for @patientName</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">@ViewData["Message"]</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Temperature (°C)</th>
                <th>Blood Pressure</th>
                <th>Heart Rate</th>
                <th>Respiratory Rate</th>
                <th>Oxygen Saturation (%)</th>
                <th>Glucose Level (mmol/L)</th>
                <th>Recorded By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.RecordedDate.ToString("g")</td>
                    <td>@v.Temperature</td>
                    <td>@v.BloodPressure</td>
                    <td>@v.HeartRate</td>
                    <td>@v.RespiratoryRate</td>
                    <td>@v.OxygenSaturation</td>
                    <td>@(v.GlucoseLevel.HasValue? v.GlucoseLevel.Value.ToString() : "N/A")</td>
                    <td>@(v.Nurse != null ? v.Nurse.Name ?? v.Nurse.UserName : v.NurseUserId)</td>
                </tr>
            }
        </tbody>
    </table>
}
