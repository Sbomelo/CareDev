@model CareDev.Models.ViewModels.PatsVitalsVM

@{
    ViewData["Title"] = "Record Patient Vitals";
}

<!-- Optional Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f9;
    }

    .form-section {
        max-width: 700px;
        margin: auto;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
    }

        .form-section h2 {
            font-weight: 600;
            margin-bottom: 25px;
            color: #2c3e50;
        }

    .form-group label {
        font-weight: 500;
    }

    .btn-group {
        margin-top: 20px;
    }

    .btn-success {
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 8px;
    }

    .btn-secondary {
        margin-left: 10px;
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 8px;
    }
</style>

<div class="form-section mt-5">
    <h2>Record Vitals for <span class="text-primary">@ViewData["PatientName"]</span></h2>

    <form asp-action="Create" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="PatientUserId" />
        <input type="hidden" asp-for="NurseUserId" />

        <div class="form-group mb-3">
            <label asp-for="Temperature"></label>
            <input asp-for="Temperature" class="form-control" placeholder="e.g. 36.5 °C" />
            <span asp-validation-for="Temperature" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="HeartRate"></label>
            <input asp-for="HeartRate" class="form-control" placeholder="e.g. 72 bpm" />
            <span asp-validation-for="HeartRate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="RespiratoryRate"></label>
            <input asp-for="RespiratoryRate" class="form-control" placeholder="e.g. 18 breaths/min" />
            <span asp-validation-for="RespiratoryRate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BloodPressure"></label>
            <input asp-for="BloodPressure" class="form-control" placeholder="e.g. 120/80 mmHg" />
            <span asp-validation-for="BloodPressure" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="OxygenSaturation"></label>
            <input asp-for="OxygenSaturation" class="form-control" placeholder="e.g. 98%" />
            <span asp-validation-for="OxygenSaturation" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="GlucoseLevel"></label>
            <input asp-for="GlucoseLevel" class="form-control" placeholder="e.g. 5.8 mmol/L" />
            <span asp-validation-for="GlucoseLevel" class="text-danger"></span>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-success">💾 Save Vitals</button>
            <a asp-action="Patients" class="btn btn-secondary">← Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
