<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>USER AND ROLE MANAGEMENT</title>
      <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
      <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
      <script src="~/lib/jquery/dist/jquery.min.js"></script>
      <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
      <script src="~/js/site.js" asp-append-version="true"></script>
      

      <style>
            body {
                font-family: Arial, sans-serif;
                background-color: rgb(38,38,38);
                color:white;
            }

            a{
                text-decoration:none;
            }
            
            div{
                text-align:center;
            }

            .optionsDiv{
                height:30px;
                width: fit-content;
                margin-bottom: 20px;
                margin-top:20px;
                padding: 10px; 
            } 
            .optionsDiv:hover {
                transform:scale(1.1, 1.1);
            }

            .option{
               padding: 10px;
            }
            .option:hover {
                 border: 3px solid white;
            }

      </style>
   </head>
<body>
 
  <div class="container mt-3">
        <h1>Hospital Configuration</h1>
        <br>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#Infrastructure">Update Facility Infrastructure</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#Values">Set Defaul Values</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#Info">Update About Info</a>
            </li>
        </ul>

        <!-- Tab panes -->
    <div class="tab-content">
            <div id="Infrastructure" class="container tab-pane active">
                    <h3>Facility Infrastructure</h3>

                    <div class="d-flex flex-row justify-content-center float-center">
                        <div class="optionsDiv">
                            <a asp-controller="Wards" asp-action="Index">
                                <div class="rounded-pill bg-black option" style="padding:10px;">
                                    <h3 class="text-white">MANAGE WARDS</h3>
                                </div>
                            </a>
                        </div>

                        <div class="optionsDiv">
                            <a asp-controller="Beds" asp-action="Index">
                                <div class="rounded-pill bg-black option" style="padding:10px;">
                                    <h3 class="text-white">MANAGE BEDS</h3>
                                </div>
                            </a>
                        </div>
                    </div>
            </div>
               
               

            <div id="Values" class="container tab-pane fade">
                <br>
                <h3>Set Default Values</h3>

                    <div class="d-flex flex-row justify-content-center float-center">
                        <div class="optionsDiv">
                            <a asp-controller="Allergies" asp-action="Index">
                                <div class="rounded-pill bg-black option" style="padding:10px;">
                                    <h3 class="text-white">Manage Allergies</h3>
                                </div>
                            </a>
                        </div>

                        <div class="optionsDiv">
                            <a asp-controller="Medications" asp-action="Index">
                                <div class="rounded-pill bg-black option" style="padding:10px;">
                                    <h3 class="text-white">Manage Medication</h3>
                                </div>
                            </a>
                        </div>

                        <div class="optionsDiv">
                            <a asp-controller="ChronicConditions" asp-action="Index">
                                <div class="rounded-pill bg-black option" style="padding:10px;">
                                    <h3 class="text-white">Manage Chronic Conditions</h3>
                                </div> 
                            </a>
                        </div>
                    </div> 
            </div>

            <div id="Info" class="container tab-pane fade">
                <br>
                <h3>Update About Info</h3>
               
            </div>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}