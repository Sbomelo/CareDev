            .withUrl("/notificationHub")
            .build();
        connection.on("ReceiveNotification", message => {
            // Display the message (e.g. append to a notification list or alert)
            console.log("Notification:", message);
            // e.g. show a toast or update a notifications dropdown
        });
        connection.start().catch(err => console.error(err));
    </script>
    <script>
        (function ($) {
            // Parse SA ID's first 6 digits YYMMDD -> Date object or null
            function parseSaIdDob(IDNumber) {
                if (!IDNumber || IDdNumber.length < 6) return null;
                var yy = IDNumber.substring(0,2);
                var mm = IDNumber.substring(2,4);
                var dd = IDNumber.substring(4,6);

                if (isNaN(yy) || isNaN(mm) || isNaN(dd)) return null;

                var y = parseInt(yy, 10), m = parseInt(mm, 10), d = parseInt(dd, 10);
                var now = new Date();
                var currentTwoDigitYear = now.getFullYear() % 100;
                var fullYear = (y > currentTwoDigitYear) ? 1900 + y : 2000 + y;

                var dt = new Date(fullYear, m - 1, d);
                if (dt && dt.getFullYear() === fullYear && (dt.getMonth()+1) === m && dt.getDate() === d)
                    return dt;

                return null;
            }

            // Unobtrusive validator adapter
            $.validator.unobtrusive.adapters.add('matchesiddob', ['idprop'], function (options) {
                var element = options.element;
                options.rules['matchesiddob'] = { idprop: options.params.idprop };
                options.messages['matchesiddob'] = options.message;
            });

            $.validator.addMethod('matchesiddob', function (value, element, params) {
                var form = $(element).closest('form');
                var idSelector = '[name="' + params.idprop + '"]';
                var idValue = form.find(idSelector).val();

                if (!value || !idValue) return true; // required handled elsewhere

                var dob = new Date(value);
                var parsed = parseSaIdDob(idValue);

                if (!parsed) return false; // invalid id format
                // Compare only date parts
                return parsed.getFullYear() === dob.getFullYear()
                    && parsed.getMonth() === dob.getMonth()
                    && parsed.getDate() === dob.getDate();
            }, '');

            // Optional: live feedback when either field changes
            $(document).on('blur change keyup', '[name="IDNumber"], [name="DateOfBirth"]', function () {
                var form = $(this).closest('form');
                form.validate().element('[name="DateOfBirth"]');
            });

        })(jQuery);
    </script>

    @await Html.PartialAsync("_ConfirmModal")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
