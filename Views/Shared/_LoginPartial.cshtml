@using Microsoft.AspNetCore.Identity
@using CareDev.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
       @*  <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a> *@
            <a class="nav-link text-primary fw-bold" asp-controller="MyProfile" asp-action="Index" title="Manage">My Profile</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-danger fw-bold">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link  text-info fw-bold" asp-area="Identity" asp-page="/Account/RegisterPatient">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-primary fw-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
