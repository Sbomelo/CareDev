    <script>
        $(function(){
            var meter = document.getElementById('password-strength-meter');
            var text = document.getElementById('password-strength-text');

            $('#Password').on('input', function () {
                var val = $(this).val();
                if (!window.zxcvbn) {
                    // fallback: simple heuristic
                    var score = 0;
                    if (val.length >= 8) score++;
                    if (/[A-Z]/.test(val)) score++;
                    if (/[0-9]/.test(val)) score++;
                    if (/[^A-Za-z0-9]/.test(val)) score++;
                    if (score > 4) score = 4;
                    meter.value = score;
                    text.innerHTML = ['Very weak','Weak','Fair','Good','Strong'][score] || '';
                    return;
                }
                var result = zxcvbn(val);
                meter.value = result.score; // 0-4
                var feedback = result.feedback && result.feedback.warning ? result.feedback.warning : '';
                var suggestions = result.feedback && result.feedback.suggestions ? result.feedback.suggestions.join(' ') : '';
                var label = ['Very weak','Weak','Fair','Good','Strong'][result.score];
                text.innerHTML = label + (feedback ? ' — ' + feedback : '') + (suggestions ? ' ' + suggestions : '');
            });
        });
    </script>

</body>
