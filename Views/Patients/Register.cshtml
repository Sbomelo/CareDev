    </style>
</head>
<body>
    <!-- Registration Section -->
    <section class="registration-section">
        <div class="container">
            <div class="registration-container">
                <div class="registration-info">
                    <h2>Join Our Healthcare Family</h2>
                    <p>Register with CareDev Hospital to access our comprehensive healthcare services, track your recovery journey, and receive personalized medical care.</p>

                    <ul class="features-list">
                        <li><i class="fas fa-check-circle"></i> Easy appointment scheduling</li>
                        <li><i class="fas fa-check-circle"></i> Access to medical records</li>
                        <li><i class="fas fa-check-circle"></i> Online prescription refills</li>
                        <li><i class="fas fa-check-circle"></i> Secure messaging with doctors</li>
                        <li><i class="fas fa-check-circle"></i> Health reminders and alerts</li>
                    </ul>
                </div>

                <div class="registration-form">
                    <div class="form-header">
                        <h2>Create Your Account</h2>
                        <p>Fill in your details to get started</p>
                    </div>

                    <form id="registrationForm" asp-action="Register" method="post"
                        data-confirm-on-submit="true"
                        data-confirm-title="Patient Register"
                        data-confirm-message="Are you sure you want to register "
                        data-confirm-text="Yes"
                        data-confirm-class="btn-primary">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Name" for="firstName">Name</label>
