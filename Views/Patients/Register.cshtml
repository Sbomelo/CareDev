                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname" for="lastName">SurName</label>
                                <input asp-for="Surname" type="text" id="lastName" class="form-control" placeholder="Enter your surname" required>
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                               <label asp-for="Email" for="email">Email</label>
                                <input asp-for="Email" type="email" id="email" class="form-control" placeholder="Enter your email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" for="phone">Phone Number</label>
                            <input asp-for="PhoneNumber" type="tel" id="phone" class="form-control" placeholder="Enter your phone number" required>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="IDNumber" for="idnumber">ID Number</label>
                            <input asp-for="IDNumber" type="tel" id="idnumber" class="form-control" placeholder="Enter your id number " required>
                            <span asp-validation-for="IDNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DateOfBirth" for="dateOfBirth">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" id="dateOfBirth" class="form-control" required>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Age" for="age">Age</label>
                                <input asp-for="Age" id="age" class="form-control" required>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="gender">Gender</label>
                                <div class="select-wrapper">
                                    <select  asp-for="Gender" id="gender" class="form-control" required>
