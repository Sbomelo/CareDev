@model IEnumerable<CareDev.Models.Patient>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color:#E1F5FE;">
    <div class="row pt-4">
        <div class="text-center">

            <h1>PATIENTS LIST</h1>

        </div>

        <div class="text-end">
            <p>
                <a asp-action="Register" class="btn btn-primary rounded-pill w-25"><i class="bi bi-plus-circle"></i>Add Patient</a>
            </p>
        </div>
    </div>

    <table class="table table-active table-bordered table-hover">
        <thead>
            <tr class="table-dark">
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.SurName)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th scope ="row">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Medications)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Allergy)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.ChronicCondition)
                </th>
@*                 <th scope="row">
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </th> *@
                <th scope="row" class="text-center ">
                    <h5 class="text-white"> Manage Admissions</h5>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SurName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Medications.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Allergy.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChronicCondition.Name)
                    </td>
@*                     <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Patient)
                    </td> *@
                    <td class="table-active">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.PatientId" class="btn btn-primary rounded-pill mx-2" title="Edit Admission"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Details" asp-route-id="@item.PatientId" class="btn btn-info rounded-pill mx-2" title="Admission Details"><i class="bi bi-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.PatientId" class="btn btn-danger rounded-pill mx-2" title="Delete Admission"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center mt-2 d-flex justify-content-center align-content-center">
        <a asp-controller="Employees" asp-action="WardAdminPortal" class="btn btn-dark w-75 mx-2 rounded-pill">Bact To Menu</a>
    </div>
</body>

