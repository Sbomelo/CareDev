@{
    ViewData["Title"] = "Password Reset Requested";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body text-center p-5">
            <h2 class="text-success mb-3">
                <i class="bi bi-envelope-check-fill"></i> Check Your Email
            </h2>
            <p class="lead">
                If an account with that email exists, we’ve sent a link to reset your password.
            </p>
            <p class="text-muted">
                Please check your inbox (and spam folder) for the reset instructions.
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">
                <i class="bi bi-house-door"></i> Return to Home
            </a>
        </div>
    </div>
</div>

