@model CareDev.Models.ViewModels.PatientCreateViewModel

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete Patient</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this patient? This action cannot be undone.
</div>

<div class="card mb-3 p-3" style="max-width: 600px;">
    <p><strong>Full Name:</strong> @Model.Name @Model.SurName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
