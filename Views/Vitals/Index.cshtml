@model IEnumerable<CareDev.Models.Vital>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div style="overflow-x:auto; overflow-y:auto;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PatientId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Temperature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeartRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BloodPressure)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecordDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Temperature)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeartRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodPressure)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecordDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VitalId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.VitalId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.VitalId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


