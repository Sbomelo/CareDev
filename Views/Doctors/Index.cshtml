@model IEnumerable<CareDev.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color:#B0BEC5">
    <div class="row pt-4">
        <div class="text-center">

            <h1>DOCTORS LIST</h1>

        </div>

        <div class="text-end">
            <p>
                <a asp-action="Create" class="btn btn-primary rounded-pill w-25"><i class="bi bi-plus-circle"></i>Create A Doctor</a>
            </p>
        </div>
    </div>
    <div style="overflow-x:auto; overflow-y:auto;">
        <table class="table table-active table-hover table-bordered">
            <thead>
                <tr class="table-dark">
                    <th scope="row">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th scope="row">
                        @Html.DisplayNameFor(model => model.SurName)
                    </th>
                    <th scope="row">
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th scope="row">
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th scope="row">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th scope="row">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="row">
                        @Html.DisplayNameFor(model => model.Specialization)
                    </th>
                    <th scope="row">
                        <h5> Manage</h5>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-light">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SurName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialization)
                        </td>
                        <td class="table-active">
                            <div class="w-25 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-primary rounded-pill mx-2"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Details" asp-route-id="@item.DoctorId" class="btn btn-info rounded-pill mx-2"><i class="bi bi-info-circle"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-danger rounded-pill mx-2"><i class="bi bi-trash-fill"></i></a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-2 d-flex justify-content-center align-content-center">
        <a asp-controller="Employees" asp-action="AdminPortal" class="btn btn-dark w-50 mx-2 rounded-pill">Bact To Admin Menu</a>
        <a asp-controller="Home" asp-action="UserAndRoleManagement" class="btn btn-primary w-50 mx-2 rounded-pill">BACK</a>
    </div>
</body>

