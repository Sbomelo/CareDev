@model CareDev.Models.Role

@{
    ViewData["Title"] = "Create";
}

<h1>Create Role</h1>
<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Permissions" class="control-label"></label>
                    <input asp-for="Permissions" class="form-control" />
                    <span asp-validation-for="Permissions" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group text-center mt-2 d-flex align-content-center">
                    <input type="submit" value="Create" class="btn btn-primary rounded-pill w-75 me-1" /> <a asp-action="Index" class="btn btn-dark rounded-pill w-75 ms-1">Back to List</a>

                </div>
                <hr />
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
