@model CareDev.Models.ViewModels.MedicationDispensationVM

@{
    ViewData["Title"] = "Dispense Medication";
    var patientName = ViewData["PatientName"]?.ToString();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .form-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.08);
        margin-top: 30px;
    }

    .form-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #0d6efd;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-group {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .form-control-icon {
        position: relative;
    }

        .form-control-icon input,
        .form-control-icon textarea {
            padding-left: 2.5rem;
        }

        .form-control-icon i {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #6c757d;
        }
</style>

<div class="container">
    <div class="form-container">
        <div class="form-title">
            <i class="bi bi-capsule"></i> Dispense Medication to <span class="text-dark">@patientName</span>
        </div>

        <form asp-action="Create" asp-controller="MedicationDispensation" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <input type="hidden" asp-for="PatientUserId" />

            <div class="mb-3 form-control-icon">
                <label asp-for="MedicationName" class="form-label"></label>
                <i class="bi bi-capsule"></i>
                <input asp-for="MedicationName" class="form-control" />
                <span asp-validation-for="MedicationName" class="text-danger small"></span>
            </div>

            <div class="mb-3 form-control-icon">
                <label asp-for="Dosage" class="form-label"></label>
                <i class="bi bi-droplet-half"></i>
                <input asp-for="Dosage" class="form-control" />
                <span asp-validation-for="Dosage" class="text-danger small"></span>
            </div>

            <div class="mb-3 form-control-icon">
                <label asp-for="Route" class="form-label"></label>
                <i class="bi bi-arrow-right-circle"></i>
                <input asp-for="Route" class="form-control" />
            </div>

            <div class="mb-3 form-control-icon">
                <label asp-for="Frequency" class="form-label"></label>
                <i class="bi bi-clock-history"></i>
                <input asp-for="Frequency" class="form-control" />
            </div>

            <div class="mb-3 form-control-icon">
                <label asp-for="ScheduleLevel" class="form-label"></label>
                <i class="bi bi-list-ol"></i>
                <input asp-for="ScheduleLevel" class="form-control" type="number" />
                <span asp-validation-for="ScheduleLevel" class="text-danger small"></span>
            </div>

            <div class="mb-3 form-control-icon">
                <label asp-for="Notes" class="form-label"></label>
                <i class="bi bi-card-text"></i>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Dispense
                </button>
                <a asp-action="SelectPatient" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

