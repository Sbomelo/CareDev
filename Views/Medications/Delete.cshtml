@model CareDev.Models.Medication

@{
    ViewData["Title"] = "Delete";
}
<body style="background-color:#B0BEC5; color:white;">
    <h1>Delete Medication</h1>

    <h3>Are you sure you want to delete this Medication?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Schedule)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Schedule)
            </dd>
