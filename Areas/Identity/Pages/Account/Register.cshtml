<form class="form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post> 
    <p class="title">Register </p>
    <p class="message">Signup now and get full access to our app. </p>
    <div class="flex">
        <label >
            <input required="" placeholder="" type="text" class="input">
            <span>Firstname</span>
        </label>

        <label>
            <input required="" placeholder="" type="text" class="input">
            <span>Lastname</span>
        </label>
    </div>

    <label asp-for="Input.Email">
        <input asp-for="Input.Email" class="form-control input" autocomplete="username" placeholder="name@example.com" >
        <span>Email</span>
    </label>

    <label>
        <input required="" placeholder="" type="password" class="input">
        <span>Password</span>
    </label>
    <label asp-for="Input.Password"> 
        <input asp-for="Input.Password" class="input" autocomplete="new-password" aria-required="true" placeholder="password" >
        <span>Confirm password</span>
    </label>
    <button class="submit">Submit</button>
    <p class="signin">Already have an acount ? <a href="#">Signin</a> </p>
</form> 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
