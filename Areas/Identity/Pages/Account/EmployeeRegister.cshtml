@page
@model CareDev.Areas.Identity.Pages.Account.EmployeeRegisterModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - REDACTED_PROJECT_NAME</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: rgb(124, 155, 255);
            /* background: rgb(150, 220, 248) ; */
            /*  filter: brightness(60%); */
            font-family: 'Segoe UI', sans-serif;
        }

        #registerForm {
            border: none;
        }

        input {
            border: none;
            background: none;
            background-color: none;
            width: 60%;
        }

            input:hove {
                background-color: rgba(255, 255, 255, 0.5);
                transform: scale(1.1, 1.1);
                border: none;
            }

        a:link {
            text-decoration: none;
        }

        .divs {
            background-color: rgba(174, 174, 174, 0.5);
            padding: 10px 10px;
            margin: 10px 10px;
        }

            .divs:hover {
                background-color: rgba(255, 255, 255, 0.5);
                transform: scale(1.1, 1.1);
            }

        #Container {
            width: 440px;
            /* background-color: rgba(25,25,25,0.3); */
            background-color: rgba(21, 96, 130, 0.8 );
            border-radius: 40px;
            /*             backdrop-filter: blur(8px); */
            padding: 30px 30px;
            /* box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.25); */
            font-family: 'Segoe UI', sans-serif;
            font-size: large;
            color: white;
        }

        span {
            color: red;
        }

        #registerSubmit {
            background-color: rgba(217, 217, 217);
        }

            #registerSubmit:hover {
                background-color: rgb(70, 70, 70);
                color: white;
            }

        #emailInpit::placeholder {
            color: rgba(255, 255, 255, 0.8);
        }

        .Icon-Div {
            margin-left: 220px;
            color: white;
        }

        .register-icon {
            font-size: 8rem;
            color: white;
        }

    </style>
</head>
<body id="registerPage-body">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div id="Container" class="container mt-4 mb-4 pt-4 pb-4">
            <h4 class="fw-bold text-center"> EMPLOYEE REGISTRATION</h4>
            <h2 class="fw-bold text-center"> <i class="bi bi-person-circle register-icon"> </i></h2>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Name">Name: </label><input asp-for="Input.Name">
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.SurName">SurName: </label><input asp-for="Input.SurName">
                <span asp-validation-for="Input.SurName" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Age">Age: </label><input asp-for="Input.Age">
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Gender">Gender: </label><input asp-for="Input.Gender">
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.PhoneNumber">PhoneNumber: </label><input asp-for="Input.PhoneNumber">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Email">Email Address: </label><input asp-for="Input.Email" placeholder="example@gmai.lcom" id="emailInput">
                <span asp-validation-for="Input.Email" class="text-Email"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Password">Password: </label><input asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.ConfirmPassword">ConfirmPassword: </label><input asp-for="Input.ConfirmPassword">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg rounded-pill fw-bold">CREATE ACCOUNT</button>
            </div>
        </div>

    </form>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>
