   <body id="registerPage-body">  
     <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">  
       <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>  
       <div id="Container" class="container mt-4 mb-4 pt-4 pb-4"> 
            <h4 class="fw-bold text-center"> PATIENT REGISTRATION</h4>
            <h2 class="fw-bold text-center"> <i class="bi bi-person-circle register-icon"> </i></h2> 
     
            <div class="container rounded-pill divs"> 
                <label asp-for="Input.Name">Name: </label><input asp-for="Input.Name">
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs"> 
                <label asp-for="Input.SurName">SurName: </label><input asp-for="Input.SurName">
                <span asp-validation-for="Input.SurName" class="text-danger"></span>
            </div> 

            <div class="container rounded-pill divs"> 
                <label asp-for="Input.Age">Age: </label><input asp-for="Input.Age">
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Gender">Gender: </label><input asp-for="Input.Gender">
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs"> 
                <label asp-for="Input.PhoneNumber">PhoneNumber: </label><input asp-for="Input.PhoneNumber">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Medication">Medication: </label><input asp-for="Input.Medication">
                <span asp-validation-for="Input.Medication" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Allergies">Allergies: </label><input asp-for="Input.Allergies">
                <span asp-validation-for="Input.Allergies" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.ChronicCondition">ChronicCondition: </label><input asp-for="Input.ChronicCondition">
                <span asp-validation-for="Input.ChronicCondition" class="text-danger"></span> 
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Email">Email Address: </label><input asp-for="Input.Email" placeholder="example@gmai.lcom" id="emailInput">
                <span asp-validation-for="Input.Email" class="text-Email"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.Password">Password: </label><input asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="container rounded-pill divs">
                <label asp-for="Input.ConfirmPassword">ConfirmPassword: </label><input asp-for="Input.ConfirmPassword">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> 
            </div> 

            <div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg rounded-pill fw-bold">CREATE ACCOUNT</button> 
            </div>
       </div>
       
     </form>
    
