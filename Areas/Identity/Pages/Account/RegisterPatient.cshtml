@page
@model CareDev.Areas.Identity.Pages.Account.RegisterPatientModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - CareDev</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: rgb(124, 155, 255);
            font-family: 'Segoe UI', sans-serif;
        }

        #Container {
            width: 440px;
            background-color: rgba(21, 96, 130, 0.8);
            border-radius: 40px;
            padding: 30px;
            color: white;
            margin-top: 40px;
        }

        .divs {
            background-color: rgba(174, 174, 174, 0.5);
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 30px;
        }

        input, select {
            border: none;
            width: 75%;
            border-radius: 30px;
            background: none;
            color: white;
        }

            input:hover, select:hover {
                background-color: rgba(255, 255, 255, 0.5);
            }

        #registerSubmit {
            background-color: rgba(217, 217, 217);
        }

            /* #registerSubmit:hover {
                background-color: rgb(70, 70, 70);
                color: white;
            } */

        h3, h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <form id="registerForm" method="post">
        <div id="Container" class="container">
            <h3 class="fw-bold">USER REGISTRATION</h3>
            <h2><i class="bi bi-person-circle register-icon"></i></h2>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="divs">
                <label asp-for="Input.Name">Name:</label>
                <input asp-for="Input.Name" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.SurName">Surname:</label>
                <input asp-for="Input.SurName" />
                <span asp-validation-for="Input.SurName" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.Age">Age:</label>
                <input asp-for="Input.Age" />
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.Gender">Gender:</label>
                <select asp-for="Input.Gender">
                    <option value="">--SELECT--</option>
                    <option value="MALE">Male</option>
                    <option value="FEMALE">Female</option>
                    <option value="OTHER">Other</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.PhoneNumber">Phone Number:</label>
                <input asp-for="Input.PhoneNumber" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.Role">Select Role:</label>
                <select asp-for="Input.Role" asp-items="Model.RoleList">
                    <option value="">-- Select Role --</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.Email">Email:</label>
                <input asp-for="Input.Email" placeholder="example@gmail.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.Password">Password:</label>
                <input asp-for="Input.Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="divs">
                <label asp-for="Input.ConfirmPassword">Confirm Password:</label>
                <input asp-for="Input.ConfirmPassword" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn w-100 rounded-pill fw-bold">Create Account</button>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
