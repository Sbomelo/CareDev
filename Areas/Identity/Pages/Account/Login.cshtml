<style> 
    body {
        background: url('/images/hospital-website-background-7.webp') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        width: 420px;
        background-color: rgba(25,25,25,0.3);
        border-radius: 40px;
        backdrop-filter: blur(8px); 
        padding: 30px 30px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.25);
        color: white;
    }

    .form-control {
        background-color: transparent !important;
        border: 2px solid white;
        color: white;
        border-radius: 30px;
        padding-left: 40px;
        height: 45px;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.8);
    }

    .login-btn {
        border-radius: 30px;
        background-color: white;
        color: black;
        font-weight: bold;
        width: 100%;
        padding: 10px;
    }
    .login-btn:hover{
            background-color: rgba(25,25,25,0.3);
    }

    a{
        text-decoration: none;
    }

    .login-icon {
        position: absolute;
        margin-left: 10px;
        margin-top: 12px;
        color: white;
    }

    .bottom-links a {
        color: black;
        text-decoration: underline;
        font-size: 0.9em;
    }
</style>
<div class="d-flex justify-content-center align-items-center vh-100">
   <div class="login-container">
    <form method="post">
            <h3 class="text-center fw-bold">LOGIN <i class="bi bi-hospital"></i></h3>
            <p class="text-center mb-4">WELCOME BACK</p>

            <div class="mb-4 position-relative">
                <i class="bi bi-person login-icon"></i>
                <input asp-for="Input.Email" placeholder="Username or Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>


            <div class="mb-4 position-relative">
                <i class="bi bi-lock login-icon"></i>
                <input asp-for="Input.Password" placeholder="Enter Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>


            <div class="mb-3 text-end">
                <a asp-page="./ForgotPassword" class="text-light">Forgot Password?</a>
            </div>


            <div class="mb-3">
                <button type="submit" class="btn login-btn">LOGIN</button>
            </div>
    </form> 
        
        <div class="d-flex justify-content-between bottom-links">
            <a asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold">CREATE ACCOUNT</a>
            <a href="#">NEED HELP?</a>
        </div>
   </div> 
</div>


