@page
@model LoginModel
<!DOCTYPE html> 
<html> 
 <head>
     <style>
         body{
            background-image: url("/Images/hospital-website-background-7.webp");
            background-size: cover;
            background-repeat: no-repeat;
            <!-- background-position: center center; -->

         }

         #loginDiv{
             background-color: rgba(25,25,25,0.3);
             border: none;
             border-radius: 50px; 
             width: 500px;
         } 

     </style> 

 </head>

<body id="loginPage-body">
    <div class="d-flex jusify-contet-center align-itemss-center"> 
        <div id="loginDiv">
            <div class="mt-3 mb-3">
                <div class="d-flex flex-row justify-content-center align-items-center">
                    <h1 class="text-white">
                        LOGIN
                    </h1>
                </div>
                <div class="d-flex flex-row justify-content-center align-items-center">
                    <h6 class="text-white">
                        WELCOME BACK
                    </h6>
                </div>
            </div>

            <div class="d-flex flex-row justify-content-center align-items-cente w-100">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mt-3 mb-3 w-100">
                        <input asp-for="Input.Email" class="form-control border border-2 border-white rounded-pill w-100" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"><i class="bi bi-person"></i>Username or Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 w-100">
                        <input asp-for="Input.Password" class="form-control border border-2 border-white rounded-pill w-100" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label"><i class="bi bi-lock"></i>Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-200 btn btn-lg bg-white border rounded-pill">Log in</button>
                    </div>

                </form>
            </div>
            <div class="">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>
        </div>
    </div> 

    

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
 </body>
</html>

